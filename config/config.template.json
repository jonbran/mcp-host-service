{
  "mcp": {
    "mcp_servers": [
      {
        "name": "WebScraper",
        "transport": {
          "type": "stdio",
          "command": "python",
          "args": ["scripts/webscraper_server.py"]
        }
      },
      {
        "name": "SearchEngine",
        "transport": {
          "type": "sse",
          "url": "https://example.com/search-mcp"
        }
      },
      {
        "name": "Playwright",
        "transport": {
          "type": "stdio",
          "command": "npx",
          "args": ["-y", "@executeautomation/playwright-mcp-server", "--headless", "--vision"]
        },
        "config": {
          "mode": "vision"
        }
      }
    ]
  },
  "models": {
    "anthropic": {
      "provider": "anthropic",
      "model_id": "claude-sonnet-4-20250514",
      "max_sequence_length": 4096,
      "temperature": 0.7,
      "top_p": 0.9,
      "api_key": "${ANTHROPIC_API_KEY}"
    },
    "openai": {
      "provider": "openai",
      "model_id": "gpt-4o-mini",
      "max_sequence_length": 8192,
      "temperature": 0.7,
      "top_p": 0.9,
      "api_key": "${OPENAI_API_KEY}"
    }
  },
  "model": {
    "provider": "anthropic",
    "model_id": "claude-sonnet-4-20250514",
    "max_sequence_length": 4096,
    "temperature": 0.7,
    "top_p": 0.9,
    "api_key": "${ANTHROPIC_API_KEY}"
  },
  "api": {
    "host": "0.0.0.0",
    "port": 8001,
    "timeout": 60,
    "max_request_size": 1048576,
    "default_format": "json",
    "rate_limit_enabled": false,
    "rate_limit": 100
  },
  "data_dir": "./data"
}
