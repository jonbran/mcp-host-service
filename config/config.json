{
  "mcp": {
    "mcp_servers": [
      {
        "name": "WebScraper",
        "transport": {
          "type": "stdio",
          "command": "python",
          "args": ["scripts/webscraper_server.py"]
        }
      },
      {
        "name": "SearchEngine",
        "transport": {
          "type": "sse",
          "url": "https://example.com/search-mcp"
        }
      }
    ]
  },
  "model": {
    "provider": "huggingface",
    "model_id": "gpt2",
    "max_sequence_length": 1024,
    "temperature": 0.7,
    "top_p": 0.9,
    "batch_size": 1,
    "device": "cpu",
    "optimize": false,
    "api_key": null,
    "api_base": null
  },
  "api": {
    "host": "0.0.0.0",
    "port": 8000,
    "timeout": 60,
    "max_request_size": 1048576,
    "default_format": "json",
    "rate_limit_enabled": false,
    "rate_limit": 100
  },
  "data_dir": "./data"
}
